<UserControl x:Class="TishreenUniversity.ParallelPro.Controls.Login.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TishreenUniversity.ParallelPro.Controls.Login"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:converter="clr-namespace:TishreenUniversity.ParallelPro.IValueConverters"
             xmlns:controls="clr-namespace:TishreenUniversity.ParallelPro.Controls"
             xmlns:icons="clr-namespace:ThishreenUniversity.ParallelPro.Enums;assembly=ThishreenUniversity.ParallelPro.Enums"
             mc:Ignorable="d" 
             
             >
    <!--Holds all content-->
    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <!--Login information-->
            <ColumnDefinition/>
            <!--Tile show case-->
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Background blure effect black-->
        <Border  Background="#CE000000" Grid.ColumnSpan="2">
            <Border.Effect>
                <BlurEffect Radius="10" KernelType="Gaussian"/>
            </Border.Effect>
        </Border>
        <!--Login information-->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 20">
            <Grid.RowDefinitions>
                <!--Icon-->
                <RowDefinition Height="200"/>
                <!--Username and password-->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <!--Icon-->
            <Path
                Stretch="Uniform"      
                Margin="0 20"  
                HorizontalAlignment="Center" 
                Tag="{x:Static icons:ApplicationIcons.LoginUserIcon}" Data="{Binding  RelativeSource={RelativeSource Self},Path=Tag,Converter={converter:ApplicationIconValueConverter}}">
                <Path.Fill>
                    <LinearGradientBrush StartPoint="0.0,0.0" EndPoint="0.0,1.0">
                        <GradientStop Offset="0" Color="White"/>
                        <GradientStop Offset="0.8" Color="White"/>
                        <GradientStop Offset="0.8" Color="{StaticResource DarkBlue}"/>
                    </LinearGradientBrush>
                </Path.Fill>
            </Path>
            <!--Username and the password-->
            <StackPanel   Grid.Row="2"  MinWidth="400">
                <!--The Username for the person-->
                <TextBox
                    x:Name="Username" Margin="5 20"  
                    metro:TextBoxHelper.Watermark="Username"  
                    Foreground="White"/>
                <!--The password for him-->
                <PasswordBox 
                Style="{StaticResource MetroPasswordBox}" 
                        Background="Transparent" 
                        BorderThickness="0 0 0 1" 
                        Margin="5 20" 
                        metro:TextBoxHelper.Watermark="Password" 
                        HorizontalContentAlignment="Center" 
                        FontSize="{Binding ElementName=Username,Path=FontSize}" 
                        FontWeight="{Binding ElementName=Username,Path=FontWeight}" 
                        Foreground="{Binding ElementName=Username,Path=Foreground}"/>
                <Button 
                    Style="{StaticResource MainWindowButtons}" 
                    Tag="Login"
                    FontSize="{StaticResource FontSizeExtraLarg}"
                    Background="{StaticResource DarkBlueBrush}"/>
            </StackPanel>
        </Grid>

        <!--Tilte-->
        <Viewbox Grid.Column="1" Margin="0 20 0 0" VerticalAlignment="Center" Grid.Row="1">
            <controls:MainTitle/>
        </Viewbox>

    </Grid>


</UserControl>
