<local:BaseUserControl x:Class="TishreenUniversity.ParallelPro.Controls.MainTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TishreenUniversity.ParallelPro"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontWeight="Bold" FontSize="{StaticResource FontSizeLarg}">
            <Run Foreground="White">C</Run><Run Foreground="Gray">omputer</Run>
        </TextBlock>

        <TextBlock FontWeight="Bold" Margin="12 -10 0 0" Grid.Row="1" FontSize="{StaticResource FontSizeLarg}">
            <Run Foreground="White" FontSize="{StaticResource FontSizeLarg}">A</Run><Run Foreground="Gray">rchitecture</Run> <Run FontSize="{StaticResource FontSizeSmall}" Foreground="White" FontWeight="Medium" FontStyle="Oblique">Task Scheduling</Run>
        </TextBlock>
        
    </Grid>
</local:BaseUserControl>
