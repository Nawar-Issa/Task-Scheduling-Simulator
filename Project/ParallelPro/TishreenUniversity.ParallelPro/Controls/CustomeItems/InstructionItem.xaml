<local:BaseUserControl x:Class="TishreenUniversity.ParallelPro.Controls.InstructionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TishreenUniversity.ParallelPro"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding Name,FallbackValue=ADD}" Style="{StaticResource InstructionItemText}" Grid.Column="0"/>
        <TextBlock Text="{Binding Target,FallbackValue=F8}" Style="{StaticResource InstructionItemText}" Grid.Column="1"/>
        <TextBlock Text="{Binding Source01,FallbackValue=F0}" Style="{StaticResource InstructionItemText}" Grid.Column="2"/>
        <TextBlock Text="{Binding Source02,FallbackValue=F2}" Style="{StaticResource InstructionItemText}" Grid.Column="3"/>
        
    </Grid>
</local:BaseUserControl>
