<Window x:Class="TishreenUniversity.ParallelPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TishreenUniversity.ParallelPro"
        xmlns:controls="clr-namespace:TishreenUniversity.ParallelPro.Controls"
        mc:Ignorable="d"
        Title="النافذة الرئيسية" >
    <Grid Background="{StaticResource DarkBlueBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--Title-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--Tilte-->
            <Viewbox HorizontalAlignment="Left">
                <controls:MainTitle/>
            </Viewbox>
            <Border Grid.Column="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"   Color="Black"/>
                </Border.Effect>
                <!--Tishreen Logo-->
                <Image Grid.Column="1" Source="/Images/tishreenLogoSemiTransparent.png" HorizontalAlignment="Right" Margin="10"/>
            </Border>
        </Grid>
        
        <!--Split border-->
        <Border
            Grid.Row="1"
            BorderThickness="0 2 0 0"
            Height="6">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0.0 , 0.0" EndPoint="1.0, 0.0" >
                    <GradientStop Color="{StaticResource DarkBlue}" Offset="0.0"/>
                    <GradientStop Color="White" Offset="0.5"/>
                    <GradientStop Color="{StaticResource DarkBlue}" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.0, 1.0" EndPoint="0.0, 0.0" >
                    <GradientStop Color="{StaticResource DarkBlue}" Offset="0.0"/>
                    <GradientStop Color="White" Offset="3.0"/>
                </LinearGradientBrush>
            </Border.Background>


        </Border>

        
        <!--Main Content-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!--Algorithims Menu-->
                <ColumnDefinition Width="auto"/>
                <!--instuctions-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
          
            
            <Button Focusable="False" Width="20" HorizontalAlignment="Right" Background="Transparent" BorderBrush="Black" Margin="0 5 -15 5 " Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border CornerRadius="0 10 10 0" x:Name="border" Opacity="0.3" Background="WhiteSmoke">
                            <Grid>
                                <TextBlock
                                x:Name="closeArrow"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                FontSize="{StaticResource FontSizeRegular}"
                                FontFamily="{StaticResource FontAwesome}"
                                Text="&#xf060;"
                                Foreground="Gray"/>
                                <TextBlock
                                x:Name="openArrow"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                FontSize="{StaticResource FontSizeRegular}"
                                FontFamily="{StaticResource FontAwesome}"
                                Text="&#xf061;"
                                    Visibility="Hidden"
                                Foreground="Gray"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            To="0.5"
                                            Duration="00:00:0.3"
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Opacity"
                                            />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            To="0.3"
                                            Duration="00:00:0.3"
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="Opacity"
                                            />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--Algorithims-->
            <controls:MainWindowButtons  x:Name="SideAlgo" VerticalAlignment="Top" />

        </Grid>
        

    </Grid>
</Window>
